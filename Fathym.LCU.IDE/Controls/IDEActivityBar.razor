@inherits IDEActivityBarBase

<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark"
     @ref="Sidebar">
    <BarBrand>
        <BarItem Padding="Padding.Is2">
            <BarLink To="/">
                <Image Class="logo short" Source="@Icon" Text="Fathym" />

                <MediaQuery Media="@LCUBreakpoints.Up(992)">
                    <Matched>
                        <Text Padding="Padding.Is2.FromStart" TextColor="TextColor.Primary">@Title</Text>
                    </Matched>
                </MediaQuery>
            </BarLink>
        </BarItem>
    </BarBrand>

    <BarMenu>
        @if (Items != null)
        {
            var itemLinks = IDEBarMenu.BuildItemLinks(String.Empty, String.Empty, Items);

            <BarStart>
                @foreach (var item in Items)
                {
                    if (item.Position == IDEBarItemPositionTypes.Start)
                    {
                        @IDEBarMenu.CreateBarItem((item, itemLinks))
                    }
                }
            </BarStart>

            <BarEnd>
                @foreach (var item in Items)
                {
                    if (item.Position == IDEBarItemPositionTypes.End)
                    {
                        @IDEBarMenu.CreateBarItem((item, itemLinks))
                    }
                }
            </BarEnd>
        }
    </BarMenu>
</Bar>
