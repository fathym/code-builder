@inherits IDEHeaderBase

<Bar Breakpoint="Breakpoint.Desktop"
     Background="Background.Dark"
     ThemeContrast="ThemeContrast.Dark">
    <BarBrand>@Title</BarBrand>

    <BarToggler />

    <BarMenu>
        @if (Items != null)
        {
            var itemLinks = IDEBarMenu.BuildItemLinks(PackagePath, PluginPath, Items);

            <BarStart>
                @foreach (var item in Items)
                {
                    if (item.Position == IDEBarItemPositionTypes.Start)
                    {
                        @IDEBarMenu.CreateBarItem((item, itemLinks))
                    }
                }
            </BarStart>

            <BarEnd>
                @foreach (var item in Items)
                {
                    if (item.Position == IDEBarItemPositionTypes.End)
                    {
                        @IDEBarMenu.CreateBarItem((item, itemLinks))
                    }
                }
            </BarEnd>
        }
    </BarMenu>
</Bar>