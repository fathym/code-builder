{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es6",
    "module": "esnext",
    "outDir": "../wwwroot",
    "declaration": true,
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": ["./src"]
}
