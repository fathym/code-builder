@inherits IDEStudioShellBase

<Layout Height="Height.Is100">
    <Layout Sider>
        <LayoutSider>
            <LayoutSiderContent>
                <IDEActivityBar @ref="activityBar"
                                CollapseMode="@(CollapseModeHide ? BarCollapseMode.Hide : BarCollapseMode.Small)"
                                ThemeContrast="@ThemeContrast"
                                Background="Background"
                                Title="@ActivityTitle"
                                TitleColor="@ActivityTitleColor"
                                TitleIcon="@ActivityTitleIcon"
                                TitleLink="@ActivityTitleLink"
                                Divider="@Divider"
                                Items="@Items"></IDEActivityBar>
            </LayoutSiderContent>
        </LayoutSider>

        <Layout>
            <LayoutHeader Fixed>
                <Bar Mode="BarMode.Horizontal"
                     Breakpoint="Breakpoint.Desktop"
                     Background="Background.Light"
                     ThemeContrast="ThemeContrast.Light">
                    <BarToggler Bar="@activityBar.Sidebar" />

                    <BarBrand>
                        <BarItem>
                            <BarLink To="@TitleLink">
                                <i class="@TitleIcon b-bar-icon"></i>

                                <Text Padding="Padding.Is2.FromStart" TextColor="@TitleColor">@Title</Text>
                            </BarLink>
                        </BarItem>
                    </BarBrand>

                    @*<BarToggler />

                    <BarMenu>
                        <BarItem>Example</BarItem>
                    </BarMenu>*@
                </Bar>
            </LayoutHeader>

            <LayoutContent>
                @ChildContent
            </LayoutContent>
        </Layout>
    </Layout>
</Layout>
